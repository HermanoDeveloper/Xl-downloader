
{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
